<%= render "intersail/zf_user_manager/scripts/select_record" %>

<div class="zum_scrollable">
  <table class="table table-striped table-hover">
    <thead>
    <th></th>
    <th>Processo</th>
    <th>Attività</th>
    <th>Unità</th>
    <th>Ruolo</th>
    <th>Risorsa</th>
    <th>Abilitato</th>
    </thead>

    <tbody class="user_table_body">

    <% @acls.each do |acl| %>

        <tr id="acl_<%= acl.id %>" onclick="select_record(<%= acl.id %>);" class="<%= row_selected(acl, @acl) %>">
          <td class="list_row_icon">
            <%= image_tag "zf_user_manager/#{@section.to_s}.png", size: '24x24' %>
          </td>
          <td><%= acl.process.name %></td>
          <td><%= acl.activity.name %></td>
          <td><%= acl.unit.name %></td>
          <td><%= acl.role.name %></td>
          <td><%= acl.resource.name %></td>
          <td>
            <%= enable_icon(acl.enabled) %>
          </td>
        </tr>

    <% end %>

    </tbody>
  </table>
</div>