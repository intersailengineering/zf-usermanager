<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title">Crea profilo</h4>
</div>
<div class="modal-body">
  <%= form_tag "/user_manager/users/#{@user.id.to_s}/add_profile#{search_params_for_url}", method: :post, class: 'form-horizontal create_profile_form' do %>
      <div class="form-group">
        <label for="modal_unit_select" class="col-sm-2 control-label">Unit√†</label>
        <div class="col-sm-6">

          <%= select_tag(:unit, options_for_select(@unit_select), class: 'form-control') %>

        </div>
      </div>
      <div class="form-group">
        <label for="modal_unit_role" class="col-sm-2 control-label">Ruolo</label>
        <div class="col-sm-6">

          <%= select_tag(:role, options_for_select(@role_select), class: 'form-control') %>

        </div>
      </div>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Annulla</button>
  <button type="button" class="btn btn-primary" onclick="$('.create_profile_form').submit();">Crea</button>
</div>