<div class="form-group">
  <label for="name" class="col-sm-3 control-label <%= required_label_class(@role, :name) %>">Nome</label>
  <div class="col-sm-9">
    <%= text_field_tag :name, @role.name, class: 'form-control', placeholder: 'Nome'  %>
    <% if @role.errors.messages.has_key? :name%>
        <div class="form-field-error"><%= @role.errors.messages[:name].first %></div>
    <% end %>
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-sm-3 control-label <%= required_label_class(@role, :description) %>">Descrizione</label>
  <div class="col-sm-9">
    <%= text_area_tag :description, @role.description, class: 'form-control', placeholder: 'Descrizione'  %>
    <% if @role.errors.messages.has_key? :description %>
        <div class="form-field-error"><%= @role.errors.messages[:description].first %></div>
    <% end %>
  </div>
</div>

<%= hidden_field_tag(:parent_id, @role.parent_id ) %>