<div class="form-group">
  <label for="name" class="col-sm-3 control-label">Nome</label>
  <div class="col-sm-9">
    <%= text_field_tag :name, @unit.name, class: 'form-control', placeholder: 'Nome'  %>
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-sm-3 control-label">Descrizione</label>
  <div class="col-sm-9">
    <%= text_area_tag :description, @unit.description, class: 'form-control', placeholder: 'Descrizione'  %>
  </div>
</div>

<div class="form-group">
  <label for="description" class="col-sm-3 control-label">Padre</label>
  <div class="col-sm-9">
    <%= select :unit, :parent_id, fetch_unit_options , {}, class: 'form-control', disabled: @unit.id != 0  %>
  </div>
</div>

<%= hidden_field_tag(:parent_id, @unit.parent_id ) %>