<div class="zum_inspector_header">Crea Utente</div>

<div class="zum_inspector_data">
  <div class="zum_inspector_data_container">
    <%= form_tag "/user_manager/users#{search_params_for_url}", method: :post, class: 'form-horizontal new_user_data_form' do %>
        <div class="form-group">
          <label for="username" class="col-sm-3 control-label">Username</label>
          <div class="col-sm-9">
            <%= text_field_tag :username, '', class: 'form-control', placeholder: 'Username'  %>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-sm-3 control-label">Password</label>
          <div class="col-sm-9">
            <%= text_field_tag :password, '', type: 'password', class: 'form-control', placeholder: 'Password'  %>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-sm-3 control-label"></label>
          <div class="col-sm-9">
            <%= text_field_tag :password_confirmation, '', type: 'password', class: 'form-control', placeholder: 'Conferma password'  %>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
            <%= text_field_tag :mail, '', class: 'form-control', placeholder: 'Email'  %>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-sm-3 control-label">Nome</label>
          <div class="col-sm-9">
            <%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'Nome'  %>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-sm-3 control-label">Cognome</label>
          <div class="col-sm-9">
            <%= text_field_tag :last_name, '', class: 'form-control', placeholder: 'Cognome'  %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
              <label>
                <%= check_box_tag :active, 'true', false %> Abilitato
              </label>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

<div class="zum_inspector_footer">
  <button type="button" class="btn btn-primary btn-sm" onclick="$('.new_user_data_form').submit();">Crea</button>
  <%= link_to 'Elimina', "/user_manager/users#{search_params_for_url}", method: :get, class: 'btn btn-default btn-sm' %>
</div>